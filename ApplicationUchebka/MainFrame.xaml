<Page x:Class="ApplicationUchebka.MainFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApplicationUchebka"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainFrame" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <Button Content="СПИСОК ТЦ" Grid.Row="0" Width="150" Height="50" HorizontalAlignment="Left" x:Name="Mallbut" Click="Mallbut_Click"/>
        <Button Content="СОЗДАТЬ НОВЫЙ ТЦ" Grid.Row="0" Width="150" Height="50" HorizontalAlignment="Left" x:Name="CreateMall" Click="CreateMall_Click" Margin="150,0,0,0"/>
        <Button Content="АРЕНДОВАТЬ ПАВИЛЬОН" Grid.Row="0" Width="150" Height="50" HorizontalAlignment="Left" x:Name="RentPavilion" Click="RentPavilion_Click" Margin="300,0,0,0"/>
        <Button Content="ОКУПАЕМОСТЬ" Grid.Row="0" Width="150" Height="50" HorizontalAlignment="Left" x:Name="RIO" Click="RIO_Click" Margin="450,0,0,0"/>
        <Frame x:Name="MallList" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Page>
